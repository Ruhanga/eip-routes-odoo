<routes xmlns="http://camel.apache.org/schema/spring">

    <route id="odoo-get-product" errorHandlerRef="watcherErrorHandler">
        <from uri="direct:odoo-get-product" />

        <log message="Start: route with id ${routeId}" loggingLevel="DEBUG" />

        <setProperty name="xmlRpcClientConfig">
            <spel>#{new org.apache.xmlrpc.client.XmlRpcClientConfigImpl()}</spel>
        </setProperty>
        <script>
            <spel>
                #{getProperty('xmlRpcClientConfig').setServerURL(new java.net.URL('{{odoo.baseUrl}}/xmlrpc/2/object'))}
            </spel>
        </script>

        <setProperty name="productSearchQuery">
            <spel>#{new Object[]{new Object[]{new Object[]{'default_code', '=', getProperty('odooProductInternalRef')}}}}</spel>
        </setProperty>
        <setProperty name="getProductParams">
            <spel>#{new java.util.ArrayList(6)}</spel>
        </setProperty>
        <script>
            <spel>
                #{getProperty('getProductParams').add('{{odoo.database}}')}
                #{getProperty('getProductParams').add(getProperty('odoo-user-id'))}
                #{getProperty('getProductParams').add('{{odoo.password}}')}
                #{getProperty('getProductParams').add('product.template')}
                #{getProperty('getProductParams').add('search')}
                #{getProperty('getProductParams').add(getProperty('productSearchQuery'))}
            </spel>
        </script>
        <setBody>
            <spel>
                #{new org.apache.xmlrpc.client.XmlRpcClient().execute(getProperty('xmlRpcClientConfig'), 'execute_kw', getProperty('getProductParams'))}
            </spel>
        </setBody>

        <log message="End: route with id ${routeId}" loggingLevel="DEBUG" />
    </route>

</routes>