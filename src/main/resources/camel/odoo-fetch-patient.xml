<routes xmlns="http://camel.apache.org/schema/spring">

	<route id="odoo-fetch-patient" errorHandlerRef="watcherErrorHandler">
		<from uri="direct:odoo-fetch-patient" />

		<log message="Start: route with id ${routeId}" loggingLevel="DEBUG" />

		<setBody>
			<simple>${null}</simple>
		</setBody>

		<toD uri="{{openmrs.baseUrl}}/ws/rest/v1/patient/${exchangeProperty.order-instance.patient.uuid}?httpMethod=GET&amp;authMethod=Basic&amp;authUsername={{openmrs.username}}&amp;authPassword={{openmrs.password}}" />

		<log message="End: route with id ${routeId}" loggingLevel="DEBUG" />
	</route>
</routes>