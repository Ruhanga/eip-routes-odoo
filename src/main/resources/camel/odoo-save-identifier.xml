<routes xmlns="http://camel.apache.org/schema/spring">

	<route id="odoo-save-identifier" errorHandlerRef="watcherErrorHandler">
		<from uri="direct:odoo-save-identifier" />

		<log message="Start: route with id ${routeId}" loggingLevel="DEBUG" />

		<setBody>
			<simple>{"identifier": "${exchangeProperty.patient-odoo-id}", "identifierType": "{{openmrs.odoo.patientIdType.uuid}}"}</simple>
		</setBody>

		<toD uri="{{openmrs.baseUrl}}/ws/rest/v1/patient/${exchangeProperty.entity-instance.patient.uuid}/identifier?authMethod=Basic&amp;authUsername={{openmrs.username}}&amp;authPassword={{openmrs.password}}" />

		<log message="End: route with id ${routeId}" loggingLevel="DEBUG" />
	</route>
</routes>